<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.amaizzzing.amaizingnotes.view.fragments.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_navigation_add_notes"
            app:destination="@id/navigation_add_notes"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.amaizzzing.amaizingnotes.view.fragments.dashboard.CalendarFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_calendar" >
        <action
            android:id="@+id/action_navigation_dashboard_to_navigation_add_notes"
            app:destination="@id/navigation_add_notes"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"/>
    </fragment>

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.amaizzzing.amaizingnotes.view.fragments.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_add_notes"
        android:name="com.amaizzzing.amaizingnotes.view.fragments.add_note.AddNoteFragment"
        android:label="AddNotes"
        tools:layout="@layout/add_note_fragment" >
        <argument
            android:name = "@string/current_note"
            android:defaultValue="-1L"
            app:argType="long" />
    </fragment>
</navigation>
