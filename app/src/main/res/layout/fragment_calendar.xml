<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.CalendarFragment">
    <LinearLayout
        android:id="@+id/ll_choose_range_fragment_calendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/transGrey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cv_today_range_fragment_calendar"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_calendar_rv_item"
            android:layout_gravity="center"
            android:layout_weight="1"
            card_view:cardBackgroundColor="@color/invisible_color"
            card_view:cardCornerRadius="@dimen/margin_10dp"
            card_view:cardUseCompatPadding="true">
            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_1dp"
                card_view:cardBackgroundColor="@color/some_invisible_color"
                card_view:cardCornerRadius="@dimen/margin_10dp"
                card_view:cardUseCompatPadding="true">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/some_invisible_color">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/today"/>
                </FrameLayout>
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cv_7day_range_fragment_calendar"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_calendar_rv_item"
            android:layout_gravity="center"
            android:layout_weight="1"
            card_view:cardBackgroundColor="@color/invisible_color"
            card_view:cardCornerRadius="@dimen/margin_10dp"
            card_view:cardUseCompatPadding="true">
            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_1dp"
                card_view:cardBackgroundColor="@color/some_invisible_color"
                card_view:cardCornerRadius="@dimen/margin_10dp"
                card_view:cardUseCompatPadding="true">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/some_invisible_color">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/days7"/>
                </FrameLayout>
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cv_14day_range_fragment_calendar"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_calendar_rv_item"
            android:layout_gravity="center"
            android:layout_weight="1"
            card_view:cardBackgroundColor="@color/invisible_color"
            card_view:cardCornerRadius="@dimen/margin_10dp"
            card_view:cardUseCompatPadding="true">
            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_1dp"
                card_view:cardBackgroundColor="@color/some_invisible_color"
                card_view:cardCornerRadius="@dimen/margin_10dp"
                card_view:cardUseCompatPadding="true">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/some_invisible_color">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/days14"/>
                </FrameLayout>
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cv_month_range_fragment_calendar"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_calendar_rv_item"
            android:layout_gravity="center"
            android:layout_weight="1"
            card_view:cardBackgroundColor="@color/invisible_color"
            card_view:cardCornerRadius="@dimen/margin_10dp"
            card_view:cardUseCompatPadding="true">
            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_1dp"
                card_view:cardBackgroundColor="@color/some_invisible_color"
                card_view:cardCornerRadius="@dimen/margin_10dp"
                card_view:cardUseCompatPadding="true">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/some_invisible_color">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/days30"/>
                </FrameLayout>
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_fragment_calendar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/margin_7dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_choose_range_fragment_calendar"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_button_fragment_calendar"
        android:layout_width="@dimen/fab_button_size"
        android:layout_height="@dimen/fab_button_size"
        android:layout_marginBottom="@dimen/margin_15dp"
        android:layout_marginEnd="@dimen/margin_25dp"
        android:src="@drawable/plus"
        app:backgroundTint="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>