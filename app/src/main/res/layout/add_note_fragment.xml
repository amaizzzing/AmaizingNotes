<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragments.add_note.AddNoteFragment">

    <LinearLayout
        android:id="@+id/ll_date_add_note_fragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ll_time_add_note_fragment">
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/date_text_view_add_note_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="05.05.05"
            android:textSize="@dimen/text_24sp"
            android:gravity="center"/>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Дата"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_time_add_note_fragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ll_date_add_note_fragment">
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/time_text_view_add_note_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="20:55"
            android:textSize="@dimen/text_24sp"
            android:gravity="center"/>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Время"
            android:gravity="center"/>
    </LinearLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_name_note_add_note_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_time_add_note_fragment">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_name_note_add_note_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Название записи" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_text_note_add_note_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/til_name_note_add_note_fragment">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_text_note_add_note_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Текст записи" />
    </com.google.android.material.textfield.TextInputLayout>
    <LinearLayout
        android:id="@+id/ll_time_start_note_fragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/til_text_note_add_note_fragment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ll_time_end_note_fragment">
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/time_start_view_add_note_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="16:00"
            android:textSize="@dimen/text_24sp"
            android:gravity="center"/>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Время начала"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_time_end_note_fragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/til_text_note_add_note_fragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ll_time_start_note_fragment">
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/time_end_view_add_note_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="17:00"
            android:textSize="@dimen/text_24sp"
            android:gravity="center"/>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Время окончания"
            android:gravity="center"/>
    </LinearLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_ok_add_note_fragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="OK"
        android:gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_cancel_add_note_fragment"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_cancel_add_note_fragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Отмена"
        android:gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_ok_add_note_fragment"/>
</androidx.constraintlayout.widget.ConstraintLayout>