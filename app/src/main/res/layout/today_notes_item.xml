<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_HistoryFilterItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="10dp"
    card_view:cardUseCompatPadding="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="18dp">
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/chkbx_today_notes_item"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/time_today_notes_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <LinearLayout
            android:id="@+id/ll_name_text_today_notes_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/time_today_notes_item">
            <TextView
                android:id="@+id/name_today_notes_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="start"/>
            <TextView
                android:id="@+id/text_today_notes_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/img_menu_today_notes_item"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_menu_item_notes_24"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/ll_name_text_today_notes_item"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ll_name_text_today_notes_item"
            app:layout_constraintBottom_toBottomOf="@+id/ll_name_text_today_notes_item"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>