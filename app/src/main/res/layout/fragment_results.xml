<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.fragments.ResultsFragment">
    <ProgressBar
        android:id="@+id/pb_results_fragment"
        android:layout_width="@dimen/progress_bar_size"
        android:layout_height="@dimen/progress_bar_size"
        android:visibility="gone"
        android:layout_gravity="center"/>
    <LinearLayout
        android:id="@+id/ll_rating_results_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_res_day_fragment_results"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_calendar_rv_item"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_1dp"
            android:layout_weight="1"
            card_view:cardBackgroundColor="@color/some_invisible_color"
            card_view:cardCornerRadius="@dimen/margin_10dp"
            card_view:cardUseCompatPadding="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/count_notes_day_fragment_results"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_36sp"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Задач за день"
                    android:textSize="@dimen/margin_10dp"
                    android:layout_gravity="center"/>
                <RatingBar
                    android:id="@+id/rat_bar_days_fragment_results"
                    android:numStars="3"
                    android:layout_gravity="center"
                    style="?android:attr/ratingBarStyleIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_res_week_fragment_results"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_calendar_rv_item"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_1dp"
            android:layout_weight="1"
            card_view:cardBackgroundColor="@color/some_invisible_color"
            card_view:cardCornerRadius="@dimen/margin_10dp"
            card_view:cardUseCompatPadding="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/count_notes_week_fragment_results"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_36sp"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Задач за неделю"
                    android:textSize="@dimen/margin_10dp"
                    android:layout_gravity="center"/>
                <RatingBar
                    android:id="@+id/rat_bar_weeks_fragment_results"
                    android:numStars="3"
                    android:layout_gravity="center"
                    style="?android:attr/ratingBarStyleIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_res_month_fragment_results"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_calendar_rv_item"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_1dp"
            android:layout_weight="1"
            card_view:cardBackgroundColor="@color/some_invisible_color"
            card_view:cardCornerRadius="@dimen/margin_10dp"
            card_view:cardUseCompatPadding="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/count_notes_month_fragment_results"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_36sp"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Задач за месяц"
                    android:textSize="@dimen/margin_10dp"
                    android:layout_gravity="center"/>
                <RatingBar
                    android:id="@+id/rat_bar_months_fragment_results"
                    android:numStars="3"
                    android:layout_gravity="center"
                    style="?android:attr/ratingBarStyleIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>